private void button1_Click_1(object sender, EventArgs e)
        {
            dortislem islem = new dortislem();
            int sayi1 = Convert.ToInt32(textBox1.Text);
            int sayi2 = Convert.ToInt32(textBox2.Text);
            textBox3.Text = islem.topla(sayi1, sayi2).ToString();
        }

        private void button2_Click(object sender, EventArgs e)
        {
            dortislem islem = new dortislem();
            int sayi1 = Convert.ToInt32(textBox1.Text);
            int sayi2 = Convert.ToInt32(textBox2.Text);
            textBox3.Text = islem.cıkar(sayi1, sayi2).ToString();
        }

        private void button3_Click(object sender, EventArgs e)
        {
            dortislem islem = new dortislem();
            int sayi1 = Convert.ToInt32(textBox1.Text);
            int sayi2 = Convert.ToInt32(textBox2.Text);
            textBox3.Text = islem.carp(sayi1, sayi2).ToString();
        }

        private void button4_Click(object sender, EventArgs e)
        {
            dortislem islem = new dortislem();
            int sayi1 = Convert.ToInt32(textBox1.Text);
            int sayi2 = Convert.ToInt32(textBox2.Text);
            textBox3.Text = islem.bol(sayi1, sayi2).ToString();
        }
    }
    class dortislem
    {
    public int topla(int x,int y)
    {return x + y;}
    public int cıkar(int x, int y)
    {return x - y;}
    public int carp(int x, int y)
    {return x * y;}
    public int bol(int x, int y)
    {return x / y;}
    }
